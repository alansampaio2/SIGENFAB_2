@page "/estados"

<h3>Deficiencias</h3>

<div class="mb-3">
    <a class="btn btn-primary btn-sm" href="/estados/cadastro">Nova Estado</a>
</div>

<GenericList MinhaLista="Estados">
    <Body>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Cód.</th>
                    <th>Nome</th>
                    <th>Sigla</th>
                    <th>Cidades</th>
                    <th>Bairros</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Estados!)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Descricao</td>
                        <td>@item.Sigla</td>
                        <td>@item.NumeroCidades</td>
                        <td>@item.NumeroBairros</td>
                        <td>
                            <a href="/estados/details/@item.Id" class="btn btn-info btn-sm">Detalles</a>
                            <a href="/estados/editar/@item.Id" class="btn btn-sm btn-warning">Editar</a>
                            <button @onclick=@(() => Delete(item)) class="btn btn-sm btn-danger">Excluir</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </Body>
</GenericList>